# Staging Environment Configuration
# Qatar Airways Stopover AI Agent

# Environment
NODE_ENV=staging
ENVIRONMENT=staging

# OpenRouter Configuration for Staging
# Note: Can use development key for staging or separate staging key
OPENROUTER_API_KEY=your_staging_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Model Configuration - Staging with more verbose logging
DEFAULT_MODEL=google/gemini-2.0-flash-exp
FALLBACK_MODELS=anthropic/claude-3-haiku,openai/gpt-4o-mini
MAX_TOKENS=4096
TEMPERATURE=0.7

# Conversation Configuration - Staging limits
MAX_CONTEXT_MESSAGES=20
CONTEXT_WINDOW_TOKENS=100000
FUNCTION_CALLING_ENABLED=true
STREAMING_ENABLED=true

# Rate Limiting - More lenient for testing
RATE_LIMIT_REQUESTS_PER_MINUTE=120
RATE_LIMIT_REQUESTS_PER_HOUR=2000
RATE_LIMIT_BURST_SIZE=20

# Monitoring and Analytics - Staging
SENTRY_DSN=your_staging_sentry_dsn_here
ANALYTICS_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true
ERROR_REPORTING_ENABLED=true

# Logging Configuration - More verbose for staging
LOG_LEVEL=debug
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true
ENABLE_DEBUG_LOGGING=true

# Security Configuration
CORS_ORIGINS=https://qatar-stopover-ai-agent-staging.pages.dev,https://staging.your-domain.com
CSRF_PROTECTION_ENABLED=true
SECURITY_HEADERS_ENABLED=true

# CDN and Caching - Shorter cache times for testing
CACHE_TTL_STATIC_ASSETS=3600
CACHE_TTL_API_RESPONSES=60
CACHE_TTL_LLM_RESPONSES=0
CDN_ENABLED=true

# Performance Configuration
COMPRESSION_ENABLED=true
MINIFICATION_ENABLED=false
IMAGE_OPTIMIZATION_ENABLED=true
LAZY_LOADING_ENABLED=true

# Feature Flags - More features enabled for testing
FEATURE_VOICE_INPUT=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_A_B_TESTING=true
FEATURE_DEBUG_MODE=true

# Cloudflare Specific
CF_ZONE_ID=your_cloudflare_zone_id
CF_ACCOUNT_ID=your_cloudflare_account_id