---
import Layout from '../components/Layout.astro';
import SimpleChatContainer from '../components/SimpleChatContainer.tsx';

const sampleCustomer = {
  name: 'John Smith',
  privilegeClubNumber: 'QR123456789',
  email: 'john.smith@example.com'
};

const sampleBooking = {
  pnr: 'ABC123',
  route: {
    origin: 'LHR',
    destination: 'BKK',
    stops: ['DOH'],
    routing: 'LHR-DOH-BKK'
  },
  passengers: 2,
  status: 'confirmed'
};
---

<Layout title="Simple Chat Test - Qatar Airways">
  <div class="min-h-screen bg-gray-100">
    <div class="container mx-auto px-4 py-8">
      <div class="max-w-4xl mx-auto">
        <div class="mb-6 text-center">
          <h1 class="text-3xl font-bold text-gray-800 mb-2">Simple Chat Test</h1>
          <p class="text-gray-600">Testing basic chat functionality</p>
        </div>
        
        <div class="bg-white rounded-lg shadow-lg h-[600px]">
          <SimpleChatContainer 
            customer={sampleCustomer}
            booking={sampleBooking}
            client:only="react"
          />
        </div>
        
        <div class="mt-6 text-center text-sm text-gray-500">
          <p>This is a simplified version for testing. Check the browser console for debug information.</p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style>
  .container {
    max-width: 1200px;
  }
</style>