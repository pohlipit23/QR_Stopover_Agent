# Production Environment Configuration
# Qatar Airways Stopover AI Agent

# Environment
NODE_ENV=production
ENVIRONMENT=production

# OpenRouter Configuration for Production
# Note: Replace with actual production API key
OPENROUTER_API_KEY=your_production_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Model Configuration - Production optimized
DEFAULT_MODEL=google/gemini-2.0-flash-exp
FALLBACK_MODELS=anthropic/claude-3-haiku,openai/gpt-4o-mini
MAX_TOKENS=4096
TEMPERATURE=0.7

# Conversation Configuration - Production limits
MAX_CONTEXT_MESSAGES=15
CONTEXT_WINDOW_TOKENS=80000
FUNCTION_CALLING_ENABLED=true
STREAMING_ENABLED=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000
RATE_LIMIT_BURST_SIZE=10

# Monitoring and Analytics
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true
ERROR_REPORTING_ENABLED=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true
ENABLE_ERROR_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true

# Security Configuration
CORS_ORIGINS=https://qatar-stopover-ai-agent.pages.dev,https://your-custom-domain.com
CSRF_PROTECTION_ENABLED=true
SECURITY_HEADERS_ENABLED=true

# CDN and Caching
CACHE_TTL_STATIC_ASSETS=31536000
CACHE_TTL_API_RESPONSES=300
CACHE_TTL_LLM_RESPONSES=0
CDN_ENABLED=true

# Performance Configuration
COMPRESSION_ENABLED=true
MINIFICATION_ENABLED=true
IMAGE_OPTIMIZATION_ENABLED=true
LAZY_LOADING_ENABLED=true

# Feature Flags
FEATURE_VOICE_INPUT=false
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_A_B_TESTING=false
FEATURE_DEBUG_MODE=false

# Cloudflare Specific
CF_ZONE_ID=your_cloudflare_zone_id
CF_ACCOUNT_ID=your_cloudflare_account_id

# Database Configuration (if using D1 in future)
# DATABASE_URL=your_d1_database_url
# DATABASE_TOKEN=your_d1_database_token

# KV Store Configuration (if using KV in future)
# KV_NAMESPACE_ID=your_kv_namespace_id
# KV_PREVIEW_ID=your_kv_preview_id

# R2 Storage Configuration (if using R2 in future)
# R2_BUCKET_NAME=qatar-stopover-assets
# R2_ACCESS_KEY_ID=your_r2_access_key
# R2_SECRET_ACCESS_KEY=your_r2_secret_key